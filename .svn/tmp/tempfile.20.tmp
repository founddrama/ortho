/* BASIC ELEMENTS FIRST (as best we can) */
body {
	background:#222 url('images/bg-rabbit-transparent.gif') no-repeat top left fixed;
	font-size:14px;
}
* {	margin:0px; padding:0px; } /* murder margins, poach padding... */
p, li { font-size:1em; line-height:2em; }
blockquote {
	background:#666 url('images/quote-ripped-edge.gif') repeat-y right;
	border-left:double #710; 4px;
	color:#fff;
	margin:2em;
	padding:0.5em 1.5em 0.5em 12px;
}
blockquote, blockquote p { 	font-size:0.9em; line-height:1.7em; }
blockquote blockquote, #discussion blockquote { background:#666; }
ul, ol { margin:0.5em 0px 0.5em 1.5em; }
ul { list-style-type:square; }
li { padding-left:1em; }
code, tt { font: 0.9em 'Consolas' 'Andale Mono' Courier monospace; }
a { color:#710; text-decoration:none; }
blockquote a, li.alt a { color:#da0; }
/*a:hover {border-bottom:dashed 1px #710;}*/
a:hover { text-decoration:underline; }
hr { display:none; }

/*_ TYPOGRAPHY & BASIC FONT FACES */
#masthead, .failover h2, .pagetitle, .post-meta, .post-meta p, .post-body h2,
.archives h2, h3#commentlist, .comment-track, .commentlist cite, .nocomments,
#footer, p.wp-caption-text, .navigation {
	font-family:'Lucida Grande' 'Trebuchet MS' 'Verdana' sans-serif; }
body {	font-family:'Optima' 'Georgia' serif; }

/*_ OUR SPECIFIC STYLES */
#page {
	margin:0px 12em 0px 8%;
	position:relative;
	min-width:792px;
}
* html #page { width:812px; } /*IEhack*/

/*_ MASTHEAD/HEADER */
#masthead {
	color:#ddd;
	font-size:0.8em;
	height:160px;
	overflow:hidden;
	padding-right:21px;
}
#masthead h1 {
	font-size:5em;
	letter-spacing:0.05em;
	position:relative;
	top:108px;
}
#masthead h1 a {
	color:#ddd;
	text-decoration:none;
}
#masthead h1 a:hover {
	background:#710;
	color:#222;
}
#get-oblique {
	display:inline;/*forIE*/
	float:right;
	position:absolute;
	right:20px;
	text-align:right;
	top:9em;
	width:231px;
}
#masthead .menu {
	display:inline;/*forIE*/
	float:right;
	position:absolute;
	right:20px;
	top:0.05em;
}
ul.menu li {
	border-bottom:dashed #ddd 1px;
	border-right:dashed #ddd 1px;
	display:inline;
	margin: 0;
	padding:2px 7px;
}
ul.menu li a {
	font-size: 1em;
	color: white;
	margin:2px;
	padding:2px 4px;
}
ul.menu li a:hover {
	background: #333;
	color: #eee !important;
	text-decoration: none;
}
ul.menu li.current_page_item a, 
ul.menu li.current_page_item a:hover {
	color: #333 !important;
	background: white;
	text-decoration: none;
}
/*_ BLOG BODY (not to be confused with <body>) */
#body {
	background:#eee url('images/page-ripped-edge.gif') repeat-y right;
	padding-right:20px;
}
.failover {	min-height:8em; }
* html .failover { height:8em; }
.failover h2 { margin-bottom:1em; }
.failover form { margin-left:3em; }

/*_ POSTS (and some about comments) */
.entry { padding-left:1em; }
.post, #discussion, .pagetitle, .failover { padding:14px 0px 0px 28px; }
.post-meta, #comment-sidebar {
	display:inline;/*forIE*/
	float:right;
	margin-right:20px;
	/*padding:3em 7px 14px 0px;*/
	position:relative;
	top:2.25em;
	width:20%;
}
.post-meta, .post-meta p {
	font-size:0.8571em;
	margin-bottom:1.2857em;
}
.navigation, .post-body, #current-comments { min-width:520px; width:70%; }
* html .navigation, * html #current-comments, * html .post-body { width:70%; }/*majorIEhack*/
.navigation { padding:1.5em; font-size:0.9em; }
.navigation div {
	background-color:#ddd;
	border:1px solid #710;
	border-radius:4px;
	-moz-border-radius:4px;
	-webkit-border-radius:4px;
	padding:4px;
}
.navigation>div.alignleft { margin-left:1em; }
.post-body, #current-comments {
	display:inline;/*forIE*/
	float:left;
}
.post-body h2, .archives h2 {
	border-bottom:double #710 4px;
	font-size:1.7143em;
	margin-bottom:1em;
}
.post-body h2 a, .post-body h2 a {
	color:#222;
	text-decoration:none;
}
.entry>p, .commentlist li>p { margin-bottom:2em; }
.permalink-hash {
	bottom:-0.75em;
	color:#710;
	display:inline;/*forIE*/
	font-size:0.5em;
	float:right;
	position:relative;
}

/*_ COMMENTARIUM! and discussion */
div#discussion { border-top:dashed #710 1px; }
ol.commentlist { list-style-type:none; }
ol.commentlist>li, ol.commentlist>li p {}
ol.commentlist>li {
	border-left:dotted #710 1px;
	border-top:dotted #710 1px;
	margin:0.5em;
}
li.alt {
	color:#fff;
	background:#666;
}
.commentmetadata, .comment-track {
	display:inline;/*forIE*/
	float:right;
	font-size:0.75em;
	margin-right:0.75em;
}
.commentlist cite {
	font-size:1.25em;
	margin-left:-0.5em;
}
.nocomments {
	background:#ddd;
	border:dashed #710 2px;
	color:#710;
	font-weight:bold;
	padding:4px;
}

/*_ FOOTER */
#footer {
	color:#ddd;
	font-size:0.7em;
	padding:2em 0.5em;
}
#footer>div {
	display:inline;/*forIE*/
	float:left;
	margin:0px 8px;
	width:30.5%;
}
#footer div div, #footer img { margin:1em 0px; }
#footer h2 { font-size:1.1em; }
#footer a { color:#ccc; }
#wp-calendar { width:75%; }
#wp-calendar th, #wp-calendar td { padding:2px; text-align:center; }
#wp-calendar a { border:solid 1px #710; padding:2px; }
#wp-calendar #today { background:#666; }
#footer li {
	line-height:1.5em;
	list-style-type:square;
	padding-left:0em;
}
.delicious-posts img { margin-bottom:0em !important; }
#footer > #license { line-height:2em; text-align:center; }
#footer > #wp-meta { float:right; }

/*_ IMAGES! */
img { border:none; }
.post-body img, .post-body * img {
	margin: 0.25em;
	padding: 2px;
	border: 1px solid #666;
	max-width:100%;
}
