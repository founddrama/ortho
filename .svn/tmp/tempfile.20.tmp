/*_ Ext. Live Archives Page */
.archives { margin-right:20px; }

/*_ del.icio.us linkdump styles */
.delicious li {
	display:block;
	margin-bottom:0.5em;
}
.post-body .delicious li .delicious-link {
	font-size:1.1em !important;
	font-weight:bold;
	margin-left:-1em;
}
.delicious-extended { font-size:1em !important; }
.delicious-tags { font-size:smaller; }

/*_ footnotes plug-in styles */
hr.footnotes {
	/* color:#ddd; */
	color:#710;
	display:block;
	size:1px;
	opacity:0.25;
}
ol.footnotes li { font-size:smaller; }
